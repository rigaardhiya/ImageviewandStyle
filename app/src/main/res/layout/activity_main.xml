<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/anis"/>

            <TextView
                style="@style/TextContent.Small.White"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/acthorizonmargin"
                android:layout_marginTop="200dp"
                android:background="#4D000000"
                android:drawableLeft="@drawable/ic_collections_white_18dp"
                android:drawablePadding="4dp"
                android:padding="8dp"
                android:text="6 photo"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"

                />
        </FrameLayout>
        <TextView
            style="@style/TextContent.Black"

            android:textSize="32sp"
            android:text="Hasil suara 780"

            android:layout_marginTop="@dimen/actvertikalmargin"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            

            />
        <TextView
            style="@style/TextContent.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock hanya 5 buah"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/acthorizonmargin"
            android:layout_marginRight="@dimen/acthorizonmargin"
            android:layout_marginBottom="@dimen/actvertikalmargin"/>

        <TextView
            style="@style/TextContent.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contentapp"
            android:layout_marginLeft="@dimen/acthorizonmargin"
            android:layout_marginRight="@dimen/acthorizonmargin"
            android:layout_marginBottom="@dimen/actvertikalmargin"
            android:lineSpacingMultiplier="1"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spesifikasi"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/acthorizonmargin"
            android:layout_marginRight="@dimen/acthorizonmargin"
            android:layout_marginBottom="8dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/acthorizonmargin"
            android:layout_marginRight="@dimen/acthorizonmargin"
            android:layout_marginBottom="@dimen/actvertikalmargin">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/TextSpec.Field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="@dimen/actvertikalmargin"
                    android:text="Display" />

                <TextView
                    style="@style/TextSpec.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="@string/contencspecbatrai"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/actvertikalmargin">

                <TextView
                    style="@style/TextSpec.Field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="@dimen/actvertikalmargin"
                    android:text="Size" />

                <TextView
                    style="@style/TextSpec.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="@string/contectspecsize"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/actvertikalmargin">

                <TextView
                    style="@style/TextSpec.Field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="@dimen/actvertikalmargin"
                    android:text="Battery" />

                <TextView
                    style="@style/TextSpec.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:text="@string/contencspecbatrai"
                    android:textColor="@android:color/black" />
            </TableRow>




        </TableLayout>
        <TextView
            style="@style/TextContent.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dijual oleh"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/acthorizonmargin"
            android:layout_marginRight="@dimen/acthorizonmargin"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/acthorizonmargin"
            android:layout_marginRight="@dimen/acthorizonmargin"
            android:layout_marginBottom="@dimen/actvertikalmargin">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/aniskecil"
                android:layout_centerVertical="true"
                android:id="@+id/profile_image"
                android:layout_marginRight="@dimen/acthorizonmargin" />

            <TextView
                style="@style/TextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_image"
                android:text="Anies Baswedan"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beli"
            android:layout_marginLeft="@dimen/acthorizonmargin"
            android:layout_marginRight="@dimen/acthorizonmargin"
            android:layout_marginBottom="@dimen/actvertikalmargin" />


    </LinearLayout>
</ScrollView>